{
    "name": "@theatrum/console",
    "version": "0.2.0",
    "exports": "./src/_.ts",
    "license": "MIT",
    "tasks": {
        "dnt": "deno run -A ./tools/dnt.ts",
        "build": "cd web && yarn build",
        "bundle": "deno run --allow-read=./ --allow-write=./ ./tools/bundler.ts",
        "lint": "deno doc --lint ./src/_.ts"
    },
    "imports": {
        "hono": "jsr:@hono/hono@4.9.4"
    },
    "publish": {
        "include": [
            "src/**/*.ts",
            "LICENSE",
            "README.md"
        ],
        "exclude": [
            "!src/assets.ts"
        ]
    }
}
